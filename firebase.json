{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "target": "hrms",
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
